<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Fragment.OneFragment"
    android:background="@mipmap/bg3">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_space"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="170dp">

            <com.example.myapplication.Mine.CircleImageView
                android:id="@+id/Head_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_head"
                android:background="@drawable/iconhead"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#A0708D"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <RelativeLayout
            android:id="@+id/Seting_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/Seting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/icon_setting"
                android:drawablePadding="20sp"
                android:text="设置"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Seting"
                android:layout_marginTop="30dp"
                android:drawableLeft="@mipmap/icon_setting"
                android:drawablePadding="20sp"
                android:text="收藏"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Collection"
                android:layout_marginTop="30dp"
                android:drawableLeft="@mipmap/icon_setting"
                android:drawablePadding="20sp"
                android:text="账户"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/connectme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/icon_setting"
                android:drawablePadding="20sp"
                android:text="关于我们"
                android:textSize="25sp"
                android:layout_below="@id/Count"/>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>